{
  "name": "formula-oxid-storefront",
  "version": "1.0.0",
  "author": "@alexsanzder",
  "license": "MIT",
  "engines": {
    "node": ">=14.x"
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "analyze": "BUNDLE_ANALYZE=both yarn build",
    "prettier-fix": "prettier --write .",
    "find:unused": "npx next-unused",
    "generate": "graphql-codegen --config -r dotenv/config",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --coverage --silent --ci",
    "test:e2e": "cypress open"
  },
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@hookform/resolvers": "^2.8.3",
    "@n8tb1t/use-scroll-position": "^2.0.3",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/typography": "^0.4.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.25.0",
    "graphql": "^15.6.1",
    "next": "^11.1.2",
    "next-seo": "^4.28.1",
    "next-themes": "^0.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-fast-marquee": "^1.2.1",
    "react-hook-form": "^7.20.4",
    "react-slick": "^0.28.1",
    "sharp": "^0.29.1",
    "slick-carousel": "^1.8.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@graphql-codegen/cli": "2.2.0",
    "@graphql-codegen/fragment-matcher": "3.1.0",
    "@graphql-codegen/import-types-preset": "2.1.4",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/named-operations-object": "2.1.0",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-document-nodes": "2.1.4",
    "@graphql-codegen/typescript-graphql-files-modules": "2.1.0",
    "@graphql-codegen/typescript-operations": "2.1.6",
    "@graphql-codegen/typescript-react-apollo": "3.1.4",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.29",
    "@types/react-dom": "^17.0.9",
    "@types/react-slick": "^0.23.6",
    "@typescript-eslint/parser": "^5.3.0",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-testing-library": "^5.0.0",
    "graphql-codegen-apollo-next-ssr": "^1.7.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.2",
    "mockdate": "^3.0.5",
    "postcss": "^8.3.5",
    "prettier": "^2.4.0",
    "tailwindcss": "^2.2.4",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write --ignore-unknown",
      "jest --bail --findRelatedTests"
    ],
    "**/*.{md,mdx,json}": [
      "prettier --write"
    ]
  },
  "next-unused": {
    "alias": {
      "@lib/*": [
        "lib/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "debug": true,
    "include": [
      "components",
      "lib",
      "pages"
    ],
    "exclude": [],
    "entrypoints": [
      "pages"
    ]
  }
}
