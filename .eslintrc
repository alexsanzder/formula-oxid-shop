{
  "extends": ["next", "prettier"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", ["index", "sibling", "parent", "object"]],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@context/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@*/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
